<%= image_tag "roses-left.png", class:"img-roses roses-left-large" %>
<%= image_tag "roses-right.png", class:"img-roses roses-right-large" %>
<div class="container" style="margin-top: 75px;">
    <div class="d-flex flex-row align-items-center">
        <h1 class="float-left display-4"><%= params[:search][:title][0].upcase %><%= params[:search][:title][1..-1] %> is available on: </h1>
        <a href=<%= search_path %> class="btn ml-auto" style="align-items: center" role="button" title="Search">
        <%= fa_icon "search" %> Search Again
        </a>
    </div>
    <hr>
    <br>
    <table class="table table-hover table-bordered"">
        <thead style="background-color: var(--mauve); color: white;">
            <tr>
            <th scope="col" style="text-decoration: none; font-weight: bold; font-size: 20px;">Provider Name</th>
            <th scope="col" style="text-decoration: none; font-weight: bold; font-size: 20px;">Link to Provider</th>
            </tr>
        </thead>
        <tbody>
            <% @resultsName.each_with_index do |name, index|%> 
            <tr style="background-color: rgba(255, 255, 255, 0.9);">
                <td><%= name %></td> 
                <td><a href = "<%= @resultsURL[index] %>" target="_blank">View on provider's site</a><br> 
            </tr>
            <%end%>
        </tbody>
    </table>
    <% if !current_user %>
    <p style="font-size: 20px; padding: 1% 15%; font-weight: 300;">Join our platform today to save passwords for all of your subscription services, share those passwords between friends, and receive reminders on when to cancel them.</p>
    <%= link_to "Sign Up for Gatekeeper Now", new_user_registration_path, style: "align-self: center; font-size: 20px; font-weight: 300;"  %>

  <% end %>
  </div>
</div>
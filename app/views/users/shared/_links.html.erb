<%- if controller_name != 'registrations' && controller_name != 'passwords' %>
<%- if controller_name != 'sessions'  %>
  <%= button_to "Log in", new_session_path(resource_name), method: :get %>
<% end %>

<hr class="style-or">

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with Google", omniauth_authorize_path(resource_name, provider), method: :post, class: "btn btn-light", id: "button-google" %><br />
  <% end %>
<% end %>
<% end %>



<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'passwords' %>
 <%= link_to "New here? Sign up now", new_registration_path(resource_name), class: "link-signin" %><br /> 
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-signin" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-signin" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link-signin" %><br />
<% end %>
